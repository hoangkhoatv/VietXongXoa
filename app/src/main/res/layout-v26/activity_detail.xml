<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/primaryPadding">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:scrollbars="none"
            android:background="@color/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </android.support.v4.widget.SwipeRefreshLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/border_top"
        android:padding="@dimen/primaryPadding"
        android:orientation="horizontal">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textFontSize"
            android:background="@android:color/transparent"
            android:layout_gravity="bottom"
            android:id="@+id/editComment"
            android:paddingBottom="@dimen/secondaryPadding"
            android:layout_weight="0.9"
            android:hint="@string/enter_comment"
            android:inputType="text"
            android:autofillHints="@string/enter_comment"
            tools:targetApi="o" />
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:layout_weight="0.1"
            android:id="@+id/btnComment"
            android:onClick="onClickComment"
            android:background="@drawable/send"
            android:contentDescription="@string/send" />
    </LinearLayout>
</FrameLayout>
